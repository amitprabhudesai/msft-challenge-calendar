<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/agenda_view_row_height"
    android:baselineAligned="false">

    <!-- event begin and end times -->
    <RelativeLayout
        android:id="@+id/container_event_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/text_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_begin_time"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:gravity="bottom"
            android:textColor="@color/primary_text_disabled_material_light"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <View style="@style/Divider"
        android:layout_marginTop="2dp"
        android:layout_height="@dimen/agenda_view_column_divider_height"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"/>

    <!-- event description -->
    <RelativeLayout
        android:id="@+id/container_event_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1.0"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/primary_text_default_material_light" />

        <TextView
            android:id="@+id/text_event_location"
            android:layout_below="@id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/primary_text_disabled_material_light" />
    </RelativeLayout>

</LinearLayout>